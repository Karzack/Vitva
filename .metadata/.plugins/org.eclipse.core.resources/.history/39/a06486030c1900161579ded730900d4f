package SQLTest;

import java.sql.*;

public class TestSQL {
	private Connection conn;
	PreparedStatement stmt;
	ResultSet rs;
	String user, password, host, database;

	public TestSQL(String user,String password,String database, int host) {
		establishConnection();
		this.user = user;
		this.password = password;
		this.host =host;
		this.database = database;
	}

	public void establishConnection() {
	     
        try {
			conn = DriverManager.getConnection("jdbc:mysql://ddwap.mah.se:" + host + "/" + database +
			        "?user=" + user + "&password=" + password);
		} catch (SQLException e) {
			
			e.printStackTrace();
		}
	}
}
